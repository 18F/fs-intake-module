extends ../layout.pug
block content
  section.usa-section
    .usa-grid
      h1 Apply for a noncommercial group use permit
      
      p All form fields are required unless otherwise noted.
      
      form.usa-form-large
        fieldset
          legend Applicant Information
        
          label.usa-input(for="name") Name of group or event
          input#name(name="name" type="text" required)
            
          label.usa-input(for="address") Address of group or contact
          input#address(name="address" type="text" required)
            
          label.usa-input(for="address-line-2") Address Line 2 (optional)
          input#address-line-2(name="address-line-2" type="text")
            
          label.usa-input(for="city" required) City
          input#city(name="city" type="text")
            
          label.usa-input(for="state" required) State
          select#state(name="state" required)
            option(value="" selected)
            option(value="Illinois") Illinois
            option(value="Wisconsin") Wisconsin
            
          label.usa-input(for="zip") ZIP
          input#zip(name="zip" type="number" minlength="5" maxlength="5" required)

          label.usa-input(for="website") Website (optional)
          input#website(name="website" type="url")
            
          label.usa-input(for="email") Email Address (optional)
          input#email(name="email" type="email")
            
          fieldset
            legend Day Phone
            .usa-form-group.usa-form-group-year
              input#day-phone-1.usa-input-inline(name="day-phone-1" type="number" min="000" max="999" placeholder="555" required)
            .usa-form-group.usa-form-group-year
              input#day-phone-2.usa-input-inline(name="day-phone-2" type="number" min="000" max="999" placeholder="555" required)
            .usa-form-group.usa-form-group-year
              input#day-phone-3.usa-input-inline(name="day-phone-3" type="number" min="0000" max="9999" placeholder="5555" required)
            .usa-form-group.usa-form-group-year
              input#day-phone-4.usa-input-inline(name="day-phone-4" type="number" min="0000" max="9999" placeholder="EXT")
            
          fieldset
            legend Evening Phone
            .usa-form-group.usa-form-group-year
              input#evening-phone-1.usa-input-inline(name="evening-phone-1" type="number" min="000" max="999" placeholder="555" required)
            .usa-form-group.usa-form-group-year
              input#evening-phone-2.usa-input-inline(name="evening-phone-2" type="number" min="000" max="999" placeholder="555" required)
            .usa-form-group.usa-form-group-year
              input#evening-phone-3.usa-input-inline(name="evening-phone-3" type="number" min="0000" max="9999" placeholder="5555" required)
            .usa-form-group.usa-form-group-year
              input#evening-phone-4.usa-input-inline(name="evening-phone-4" type="number" min="0000" max="9999" placeholder="EXT")

        hr

        fieldset
          
          legend Event Details
          
          label.usa-input(for="activity-description") Description of proposed activity
          textarea#activity-description(name="activity-description" required)
            
          label.usa-input(for="location") Location and description of National Forest system lands and facilities applicant would like to use
          input#location(name="location" type="text" required)
            
          label.usa-input(for="participants") Estimated number of participants
          span.help-text.usa-form-hint This is the number of people who will directly participate in the event.
          input#participants(name="participants" type="number" required)
            
          label.usa-input(for="spectators") Estimated number of spectators
          span.help-text.usa-form-hint If your event will have spectators (such as at a sporting event), please note how many additional people will be spectators
          input#spectators(name="spectators" type="number" required)
          
          fieldset
            legend Start Date
            .usa-form-group.usa-form-group-month
              label(for="start-month") Month
              input#start-month.usa-input-inline(name="start-month" type="number" min="1" max="12" pattern="0?[1-9]|1[012]" required)
            .usa-form-group.usa-form-group-day
              label(for="start-day") Day
              input#start-day.usa-input-inline(name="start-day" type="number" min="1" max="31" pattern="0?[1-9]|1[0-9]|2[0-9]|3[01]" required)
            .usa-form-group.usa-form-group-year
              label(for="start-year") Year
              input#start-year.usa-input-inline(name="start-year" type="number" min="1900" max="2000" pattern="[0-9]{4}" required)
                  
          fieldset
            legend Start Time 
            .usa-form-group.usa-form-group-year
              label(for="start-hour") Hour
              select#start-hour.usa-input-inline(name="start-hour" required)
                option(value="" selected)
                option(value="1") 1
                option(value="2") 2
                option(value="3") 3
                option(value="4") 4
                option(value="5") 5
                option(value="6") 6
                option(value="7") 7
                option(value="8") 8
                option(value="9") 9
                option(value="10") 10
                option(value="11") 11
                option(value="12") 12
            .usa-form-group.usa-form-group-year
              label(for="start-minutes") Minutes
              select#start-minutes.usa-input-inline(name="start-minutes" required)
                option(value="" selected)
                option(value="00") 00
                option(value="15") 15
                option(value="30") 30
                option(value="45") 45
            .usa-form-group.usa-form-group-year
              label(for="start-period") AM / PM
              select#start-period.usa-input-inline(name="start-period" required)
                option(value="" selected)
                option(value="AM") AM
                option(value="PM") PM

          fieldset
            legend End Date
            .usa-form-group.usa-form-group-month
              label(for="end-month") Month
              input#end-month.usa-input-inline(name="end-month" type="number" min="1" max="12" pattern="0?[1-9]|1[012]" required)
            .usa-form-group.usa-form-group-day
              label(for="end-day") Day
              input#end-day.usa-input-inline(name="end-day" type="number" min="1" max="31" pattern="0?[1-9]|1[0-9]|2[0-9]|3[01]" required)
            .usa-form-group.usa-form-group-year
              label(for="end-year") Year
              input#end-year.usa-input-inline(name="end-year" type="number" min="1900" max="2000" pattern="[0-9]{4}" required)

          fieldset
            legend End Time 
            .usa-form-group.usa-form-group-year
              label(for="end-hour") Hour
              select#end-hour.usa-input-inline(name="end-hour" required)
                option(value="" selected)
                option(value="1") 1
                option(value="2") 2
                option(value="3") 3
                option(value="4") 4
                option(value="5") 5
                option(value="6") 6
                option(value="7") 7
                option(value="8") 8
                option(value="9") 9
                option(value="10") 10
                option(value="11") 11
                option(value="12") 12
            .usa-form-group.usa-form-group-year
              label(for="end-minutes") Minutes
              select#end-minutes.usa-input-inline(name="end-minutes" required)
                option(value="" selected)
                option(value="00") 00
                option(value="15") 15
                option(value="30") 30
                option(value="45") 45
            .usa-form-group.usa-form-group-year
              label(for="end-period") AM / PM
              select#end-period.usa-input-inline(name="end-period" required)
                option(value="" selected)
                option(value="AM") AM
                option(value="PM") PM
                
        hr
        
        fieldset.primary-permit-holder
          legend Primary Permit Holder
        
          label.usa-input(for="first-permit-holder-name") Permit holder name
          input#first-permit-holder-name(name="first-permit-holder-name" type="text" required)
          
          input#first-permit-holder-same-address(name="first-permit-holder-same-address" type="checkbox" checked)
          label.usa-input(for="first-permit-holder-same-address") Permit holder address same as group address
          
          .first-permit-holder-address
            
            label.usa-input(for="first-permit-holder-address") Address
            input#first-permit-holder-address(name="first-permit-holder-address-1" type="text" required)
              
            label.usa-input(for="first-permit-holder-address-line-2") Address Line 2 (optional)
            input#first-permit-holder-address-line-2(name="first-permit-holder-address-line-2" type="text")
              
        button#add-permit-holder.usa-button-gray(type="button") Add another permit holder

        hr
        
        .secondary-permit-holder
          fieldset
            legend Secondary Permit Holder
            
            button.hide-secondary-permit-holder.usa-button-outline(type="button") Remove

            label.usa-input(for="second-permit-holder-name") Permit holder name
            input#second-permit-holder-name(name="second-permit-holder-name" type="text" required)
              
            input#second-permit-holder-same-address(name="second-permit-holder-same-address" type="checkbox" checked)
            label.usa-input(for="second-permit-holder-same-address") Permit holder address same as group address
            
            .second-permit-holder-address
              
              label.usa-input(for="second-permit-holder-address") Address
              input#second-permit-holder-address(name="second-permit-holder-address-1" type="text" required)
                
              label.usa-input(for="second-permit-holder-address-line-2") Address Line 2 (optional)
              input#second-permit-holder-address-line-2(name="second-permit-holder-address-line-2" type="text")
        
          hr
        
        fieldset
          legend Signature
      
          label.usa-input(for="signature") Type your initials here as a signature on your application
          input#signature(name="signature" type="text" required)
        
        button.usa-button-big(type="submit") Submit Your Application
      
      script.
        $('.secondary-permit-holder').hide();
        $('.first-permit-holder-address').hide();
        $('.second-permit-holder-address').hide();
        
        $('#add-permit-holder').click(function() {
          $('.secondary-permit-holder').show();
          $('#add-permit-holder').hide();
        });
        
        $('.hide-secondary-permit-holder').click(function() {
          $('.secondary-permit-holder').hide();
          $('#add-permit-holder').show();
        });
        
        $('#first-permit-holder-same-address').click(function() {
          $('.first-permit-holder-address').toggle();
        });
        
        $('#second-permit-holder-same-address').click(function() {
          $('.second-permit-holder-address').toggle();
        });
