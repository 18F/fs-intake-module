{
  "env": {
    "es6": true,
    "node": true,
    "mocha": true
  },
  "extends": "eslint-config-airbnb",
  "parserOptions": {
    "sourceType": "module"
  },
  "rules": {
    "no-console": [
      "warn"
    ],
    "max-len": [
      2,
      {
        "code": 125,
        "tabWidth": 2,
        "ignoreUrls": true
      }
    ],
    "prefer-destructuring": [
      "warn"
    ],
    "comma-dangle": [
      "error",
      "never"
    ],
    "no-restricted-syntax": ["warn"],
    "import/no-extraneous-dependencies": ["error", {"devDependencies": ["**/test/**/*.es6"]}]
  }
}


